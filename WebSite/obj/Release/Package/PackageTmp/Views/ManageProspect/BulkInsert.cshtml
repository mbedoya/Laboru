@model List<string>

@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css/style_screen.css")
    @Styles.Render("~/Content/css/style_print.css")
    @Styles.Render("~/Content/css/styles.css")
    @Styles.Render("~/Scripts/datepick/jquery.datepick.css")
    @Styles.Render("~/Content/css/jquery.fancybox.css")
</head>
<body>
    <div>

        <form id="bulkForm" method="post" enctype="multipart/form-data">
                        
            @Plenum.WebSite.Globalization.PlenumResources.File<br />
            <input type="file" id="file" name="file" />
            <br />
            <br />
            @Plenum.WebSite.Globalization.PlenumResources.DataSource<br />
            <input type="text" id="eventName" name="eventName" />
            <br />
            <br />
            <div style="color:red">* @Plenum.WebSite.Globalization.PlenumResources.Message_FirstRowIsHeader</div>
            <br />

            <br />
            <input type="submit" value="@Plenum.WebSite.Globalization.PlenumResources.Send" />

            @if (Model != null  && Model.Count > 0)
            {
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            @item
                        </li>    
                    }                    
                </ul>
            }
        </form>

        @Scripts.Render("~/Scripts/jquery.js")
        @Scripts.Render("~/Scripts/jquery.validate.min.js")
        
        <script>

            $(document).ready(function () {

                $("#editForm").validate({
                    rules: {
                        file: { required: true }
                    },
                    messages: {
                        file: "@Plenum.WebSite.Globalization.PlenumResources.File is required"                        
                    }
                });

            });


        </script>

    </div>
</body>
</html>
